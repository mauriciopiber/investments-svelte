{
  "name": "@pibernetwork/stocks-cli",
  "version": "0.1.1",
  "license": "MIT",
  "dependencies": {
    "@finsweet/eslint-config": "^1.1.5",
    "@finsweet/tsconfig": "^1.1.0",
    "@google-cloud/local-auth": "^2.1.0",
    "@pibernetwork/stocks-model": "workspace:*",
    "@types/google-spreadsheet": "^3.3.0",
    "@types/json2csv": "^5.0.3",
    "@types/node": "^18.7.13",
    "@types/slug": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "commander": "^9.4.0",
    "cross-env": "^7.0.3",
    "csvtojson": "^2.0.10",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.2",
    "esbuild": "^0.15.5",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "google-spreadsheet": "^3.3.0",
    "googleapis": "^107.0.0",
    "json2csv": "^5.0.7",
    "mongodb": "^4.9.1",
    "node-html-parser": "5.4.2-0",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "slug": "^8.0.0",
    "typescript": "^4.8.2"
  },
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development node ./bin/build.js",
    "build": "cross-env NODE_ENV=production node ./bin/build.js",
    "lint": "eslint --ignore-path .gitignore ./src && prettier --check ./src",
    "check": "tsc --noEmit",
    "format": "prettier --write ./src",
    "test": "pnpm playwright test",
    "test:headed": "pnpm playwright test --headed",
    "release": "changeset publish",
    "update": "pnpm update -i -L",
    "validate": "pnpm run format && pnpm run lint && pnpm run check",
    "sync:source": "pnpm run build && node dist/index.cjs sync:source",
    "sync:sectors": "pnpm run build && node dist/index.cjs sync:sectors",
    "sync:sub-sectors": "pnpm run build && node dist/index.cjs sync:sub-sectors",
    "sync:segments": "pnpm run build && node dist/index.cjs sync:segments",
    "sync:companies": "pnpm run build && node dist/index.cjs sync:companies",
    "sync:tickets": "pnpm run build && node dist/index.cjs sync:tickets",
    "sync:portfolios": "pnpm run build && node dist/index.cjs sync:portfolios",
    "sync:income": "pnpm run build && node dist/index.cjs sync:income"
  }
}
