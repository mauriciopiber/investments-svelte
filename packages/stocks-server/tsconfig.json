{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "target": "es2018",
    "lib": ["es2018", "ESNext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",

    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
